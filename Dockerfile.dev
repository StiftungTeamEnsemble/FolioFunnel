# Development Dockerfile with hot reload support
FROM node:20-alpine

# Install dependencies for native modules and OpenSSL
RUN apk add --no-cache libc6-compat python3 make g++ openssl openssl-dev

WORKDIR /app

# Copy package files first for better caching
COPY package.json package-lock.json* ./

# Install all dependencies (including devDependencies)
RUN npm install

# Copy prisma schema
COPY prisma ./prisma

# Copy the rest of the source (will be overwritten by volume mounts)
COPY . .

# Expose Next.js dev server port
EXPOSE 3000

# Generate Prisma client and run migrations on startup
CMD ["sh", "-c", "npx prisma generate && npx prisma migrate deploy && npm run dev"]
